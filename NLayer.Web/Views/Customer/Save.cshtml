@{
    ViewData["Title"] = "Save";
}

@model CustomerDto

<h1>Create Customer</h1>

<div class="row">
    <form asp-action="Save" method="post" asp-controller="Customer">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" class="form-control">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" class="form-control">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdentityNo"></label>
            <input asp-for="IdentityNo" class="form-control">
            <span asp-validation-for="IdentityNo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StatusId"></label>
            <input asp-for="StatusId" class="form-control">
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input value="Save" class="btn-primary" type="submit">
        </div>
    </form>
</div>