@{
    ViewData["Title"] = "Customer Credit Cards List";
}

@model List<CustomerCreditCardWithCustomerDto>

<h1>Customer Credit Cards List</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <td>Id</td>
        <td>CardBrand</td>
        <td>CardPan</td>
        <td>StatusId</td>
        <td>Customer</td>
        <td>Created Date</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CardBrand</td>
            <td>@item.CardPan</td>
            <td>@item.StatusId</td>
            <td>@item.Customer.Name</td>
            <td>@item.CreatedDate</td>
            <td>
                <a class="btn btn-warning" asp-controller="CustomerCreditCard" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger" asp-controller="CustomerCreditCard" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>